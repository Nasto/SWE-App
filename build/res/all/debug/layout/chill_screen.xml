<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/nextRemind"
            android:id="@+id/nextRemind"
            android:layout_marginTop="40dp"
            android:textSize="25dp"
            android:layout_marginLeft="15dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/nextTime"
            android:layout_marginTop="10dp"
            android:textSize="36dp"
            android:layout_gravity="center_horizontal"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/timeLeft"
            android:id="@+id/timeLeft"
            android:textSize="25dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/nextTimeLeft"
            android:layout_marginTop="10dp"
            android:textSize="36dp"
            android:layout_gravity="center_horizontal"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnChangeTimes"
            android:onClick="timeChange"
            android:id="@+id/changeTimesButton"
            android:textSize="30dp"
            android:layout_marginTop="60dp"
            android:layout_gravity="center_horizontal"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button"
            android:onClick="simulate"
            android:layout_gravity="center"/>

</LinearLayout>