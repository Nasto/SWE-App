<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bitte Probandencode eingeben:"
        android:textSize="35dp"
        android:id="@+id/textView"
        android:layout_marginTop="63dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/codeEdit"
            android:capitalize="characters"
            android:text="-----"
            android:textSize="50dp"
            android:layout_marginTop="68dp"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:editable="true"
            android:inputType="text"
            android:maxLength="5"
            android:digits="abcdefghijklmnopqrstuvwxyz"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:text="1. Ziffer: Dritter Buchstabe des Vornamens der Mutter"
            android:phoneNumber="false"
            android:textStyle="italic"
            android:layout_marginTop="47dp"
            android:layout_below="@+id/codeEdit"
            android:layout_alignLeft="@+id/textView2"
            android:textSize="20dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:text="2. Ziffer: Dritter Buchstabe des Vornamens des Vaters"
            android:textStyle="italic"
            android:layout_below="@+id/editText2"
            android:layout_alignParentRight="true"
            android:layout_alignLeft="@+id/textView"
            android:textSize="20dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:text="3. Ziffer: Dritter Buchstabe des Geburtsortes"
            android:textStyle="italic"
            android:layout_below="@+id/textView2"
            android:layout_alignLeft="@+id/textView2"
            android:textSize="20dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:text="4. Ziffer: Dritter Buchstabe der aktuellen StraÃŸe (Hauptwohnsitz)"
            android:textStyle="italic"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/textView3"
            android:textSize="20dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:text="5. Ziffer: Dritter Buchstabe des Geburtsmonats"
            android:textStyle="italic"
            android:layout_below="@+id/textView4"
            android:layout_alignLeft="@+id/textView4"
            android:textSize="20dp"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:onClick="okMessage"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:id="@+id/button"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/errorMessage"
            android:phoneNumber="false"
            android:textStyle="italic"
            android:textSize="20dp"
            android:layout_below="@+id/button"
            android:layout_centerHorizontal="true"/>
    android:id="@+id/okButton"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="38dp"
            android:textSize="35dp"/>

</RelativeLayout>
