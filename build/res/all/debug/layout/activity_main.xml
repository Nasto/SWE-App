<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enterCode"
        android:textSize="25dp"
        android:id="@+id/textView"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/errorMessage"
            android:textStyle="italic"
            android:textSize="14dp"
            android:layout_gravity="center_horizontal"/>


    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/codeEdit"
            android:capitalize="characters"
            android:textSize="30dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:editable="true"
            android:inputType="textCapCharacters"
            android:maxLength="5"
            android:digits="abcdefghijklmnopqrstuvwxyzäöüABCDEFGHIJKLMNOPQRSTUVWXYZÄÖÜß"
            android:textAlignment="center"
            android:singleLine="true"
            android:focusable="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:text="@string/firstChar"
            android:layout_marginTop="15dp"
            android:layout_gravity="left"
            android:textSize="16dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:text="@string/secondChar"
            android:layout_marginTop="5dp"
            android:layout_gravity="left"
            android:textSize="16dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:text="@string/thirdChar"
            android:layout_marginTop="5dp"
            android:layout_gravity="left"
            android:textSize="16dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:text="@string/fourthChar"
            android:layout_marginTop="5dp"
            android:layout_gravity="left"
            android:textSize="16dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:text="@string/fifthChar"
            android:layout_marginTop="5dp"
            android:layout_gravity="left"
            android:textSize="16dp"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnOK"
            android:onClick="okMain"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:id="@+id/button"
            android:textSize="20dp"
            android:width="140dp"/>
</LinearLayout>
