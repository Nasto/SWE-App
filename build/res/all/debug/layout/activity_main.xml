<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bitte Probandencode eingeben:"
        android:textSize="35dp"
        android:id="@+id/textView"
        android:layout_marginTop="55dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"/>

    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/codeEdit"
            android:capitalize="characters"
            android:text=""
            android:textSize="50dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:editable="true"
            android:inputType="text"
            android:maxLength="5"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVGXYZ"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:text="1. Ziffer: Dritter Buchstabe des Vornamens der Mutter"
            android:layout_marginTop="45dp"
            android:layout_gravity="left"
            android:textSize="26dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:text="2. Ziffer: Dritter Buchstabe des Vornamens des Vaters"
            android:layout_marginTop="10dp"
            android:layout_gravity="left"
            android:textSize="26dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:text="3. Ziffer: Dritter Buchstabe des Geburtsortes"
            android:layout_marginTop="10dp"
            android:layout_gravity="left"
            android:textSize="26dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:text="4. Ziffer: Dritter Buchstabe der aktuellen StraÃŸe (Hauptwohnsitz)"
            android:layout_marginTop="10dp"
            android:layout_gravity="left"
            android:textSize="26dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:text="5. Ziffer: Dritter Buchstabe des Geburtsmonats"
            android:layout_marginTop="10dp"
            android:layout_gravity="left"
            android:textSize="26dp"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:onClick="okMessage"
            android:layout_below="@+id/textView5"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="26dp"
            android:id="@+id/button"
            android:textSize="40dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/errorMessage"
            android:textStyle="italic"
            android:textSize="20dp"
            android:layout_below="@+id/button"
            android:layout_centerHorizontal="true"/>

</LinearLayout>
